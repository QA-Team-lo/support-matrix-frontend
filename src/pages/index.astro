---
import Layout from "../layouts/Layout.astro";
import { getAllBoardsData } from "../lib/data";
import BoardList from "../components/BoardList.astro";

// Get all board data
const boardsData = await getAllBoardsData();
---

<Layout title="Development Boards">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Development Board Information</h1>

    <p class="text-lg mb-4">
      Browse our collection of development boards and their specifications.
    </p>

    <BoardList boards={boardsData} />
  </div>
</Layout>
