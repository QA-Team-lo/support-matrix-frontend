---
// Main board information page
import SystemList from "@/components/SystemList.astro";
import Layout from "../../../layouts/Layout.astro";

// Get the board directory from the URL parameter
const { dir } = Astro.params;

// Generate page title
const title = `${dir} Board Information`;

// Handle 404 if parameter is missing
if (!dir) {
  return Astro.redirect("/404");
}
---

<Layout title={title}>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">{title}</h1>

    <SystemList boardDir={dir} />
  </div>
</Layout>
