---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Development Board Information</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <header class="border-b py-4">
      <div class="container mx-auto px-4">
        <nav class="flex justify-between items-center">
          <a href="/" class="text-xl font-bold">DevBoard Info</a>
          <div class="flex gap-4">
            <a href="/" class="hover:underline">Home</a>
          </div>
        </nav>
      </div>
    </header>
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="border-t py-4 mt-8">
      <div
        class="container mx-auto px-4 text-center text-sm text-muted-foreground"
      >
        &copy; {new Date().getFullYear()} DevBoard Info. All rights reserved.
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
